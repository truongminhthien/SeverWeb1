    "components": {
        "schemas": {
            "Product": {
                "properties": {
                    "id_product": {
                        "type": "integer",
                        "example": 1
                    },
                    "id_category": {
                        "type": "integer",
                        "example": 2
                    },
                    "name": {
                        "type": "string",

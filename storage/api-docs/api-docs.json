                        "type": "integer",
                        "example": 4
                    },
                    "gender": {
                        "type": "string",
                        "example": "female"
                    },
                    "volume": {
                        "type": "integer",
                        "example": 50
                    },
                    "type": {
                        "type": "string",
                        "example": "Eau de Parfum"
                    },
                    "quantity": {
                        "type": "integer",
                        "example": 10
                    },
                    "views": {
                        "type": "integer",
                        "example": 100
                    },
                    "discount": {
                        "type": "number",
